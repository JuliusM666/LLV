<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.main"
             >


    <NavigationPage.TitleView>
        
            <AbsoluteLayout VerticalOptions="CenterAndExpand"  >
                <StackLayout Orientation="Horizontal">
                    <Button  FontSize="Medium" Clicked="Logout_Clicked" TextColor="White" BackgroundColor="black" Text="Atsijungti" ></Button>
                    <Button  FontSize="Medium" Clicked="Question_Clicked" TextColor="White" BackgroundColor="black" Text="Klausimai" ></Button>

                </StackLayout>
            </AbsoluteLayout>
       
    </NavigationPage.TitleView>
    <Frame>
        <Frame.Background>



            <LinearGradientBrush>

                <GradientStop Color="Azure" Offset="0.1" />

                <GradientStop Color="Gray" Offset="1.0" />

            </LinearGradientBrush>
        </Frame.Background>
    </Frame>
</ContentPage>